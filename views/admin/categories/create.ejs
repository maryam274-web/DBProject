<form action="/admin/categories/create" method="POST">

    <div class="form-group">
        <label for="category">Category Name</label>
        <input type="text" class="form-control mt-2 mb-3" id="CategoryName" name="name" placeholder="Enter category name">
    </div>
    
    <div class="form-group">
        <label for="categoryDescription">Description</label>
        <textarea class="form-control mt-2 mb-2" id="categoryDescription" name="description" rows="3" placeholder="Enter category description"></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
