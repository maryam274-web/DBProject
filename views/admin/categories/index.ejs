<h3><%- pageTitle %></h3>

<a href="/admin/categories/create" class="btn btn-info mb-3">Add Category</a>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Products</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for (let index = 0; index < categories.length; index++) { %>
            <tr>
                <td><%= categories[index]._id %></td>
                <td><%= categories[index].name %></td>
                <td><%= categories[index].description || 'N/A' %></td>
                <td>
                    <% if (Array.isArray(categories[index].products) && categories[index].products.length > 0) { %>
                        <%= categories[index].products.map(product => product.name).join(', ') %>
                    <% } else { %>
                        No products
                    <% } %>
                </td>
                <td>
                    <a href="/admin/categories/edit/<%= categories[index]._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/admin/categories/delete/<%= categories[index]._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm mt-2">Delete</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
